<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<View
		android:id="@+id/_bg___enter_in"
		android:background="@color/bled_purp"
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent" />

	<View
		android:id="@+id/rectangle_12"
		android:background="@color/mind"
		android:layout_width="246dp"
		android:layout_height="44dp"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		android:layout_marginTop="307dp"
		android:layout_marginStart="57dp" />

	<View
		android:id="@+id/rectangle_13"
		android:background="@color/mind"
		android:layout_width="246dp"
		android:layout_height="44dp"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		android:layout_marginTop="395dp"
		android:layout_marginStart="57dp" />


	<TextView
		android:id="@+id/text_enter"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="-20dp"
		android:fontFamily="@font/kav"
		android:text="Вход"
		android:textColor="@color/texts"
		android:textSize="26sp"
		app:layout_constraintBottom_toTopOf="@id/rectangle_12"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.47"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintVertical_bias="0.857" />

	<TextView
		android:id="@+id/text_noacc"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="44dp"
		android:fontFamily="@font/kav"
		android:text="Нет аккаунта?"
		android:textColor="@color/texts"
		android:textSize="20sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.498"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/rectangle_13" />

	<Button
		android:id="@+id/create_account_button"
		android:layout_width="wrap_content"
		android:layout_height="48dp"
		android:text="Создайте"
		android:textColor="@color/text_light"
		android:textSize="20sp"
		android:textAllCaps="false"
		android:fontFamily="@font/kav"
		android:background="@null"
		android:layout_marginTop="16dp"
		android:layout_marginStart="16dp"
		android:layout_marginEnd="16dp"
		android:paddingStart="16dp"
		android:paddingEnd="16dp"
		android:paddingTop="8dp"
		android:paddingBottom="8dp"
		app:layout_constraintTop_toBottomOf="@id/text_noacc"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"

		/>
	<!--		android:onClick="navigateToRegistrationScreen"-->


	<TextView
		android:id="@+id/login"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="32dp"
		android:fontFamily="@font/kav"
		android:text="Login"
		android:textColor="@color/texts"
		android:textSize="16sp"
		app:layout_constraintBottom_toBottomOf="@id/rectangle_12"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="@id/rectangle_12" />

	<TextView
		android:id="@+id/password"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="32dp"
		android:fontFamily="@font/kav"
		android:text="Password"
		android:textColor="@color/texts"
		android:textSize="16sp"
		app:layout_constraintBottom_toBottomOf="@id/rectangle_13"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="@id/rectangle_13"
		app:layout_constraintVertical_bias="0.4" />

</androidx.constraintlayout.widget.ConstraintLayout>
