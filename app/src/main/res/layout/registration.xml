
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<RelativeLayout
		android:id="@+id/content_container"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintBottom_toBottomOf="parent">

		<View
			android:id="@+id/_bg___registration"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@color/bled_purp" />

		<TextView
		android:id="@+id/rectangle_12"
		android:background="@color/mind"
		android:layout_width="246dp"
		android:layout_height="44dp"
		android:layout_marginStart="57dp"
		android:layout_marginTop="307dp"
		android:layout_centerHorizontal="true"
		 />

	<TextView
		android:id="@+id/rectangle_13"
		android:background="@color/mind"
		android:layout_width="246dp"
		android:layout_height="44dp"
		android:layout_marginStart="57dp"
		android:layout_marginTop="395dp"
		android:layout_centerHorizontal="true"
		 />

	<TextView
		android:id="@+id/rectangle_14"
		android:background="@color/mind"
		android:layout_width="246dp"
		android:layout_height="44dp"
		android:layout_marginStart="57dp"
		android:layout_marginTop="483dp"
		android:layout_centerHorizontal="true"
		 />

	<TextView
		android:id="@+id/reg"
		android:textSize="24sp"
		android:textColor="@color/texts"
		android:layout_marginLeft="103dp"
		android:layout_marginTop="229dp"
		android:layout_width="173.4dp"
		android:layout_height="40.4dp"
		android:text="Регистрация"
		android:fontFamily="@font/kav"
		android:layout_centerHorizontal="true"
		/>

	<TextView
		android:id="@+id/quest"
		android:layout_gravity="center_horizontal|center"
		android:gravity="center"
		android:textSize="18sp"
		android:textColor="@color/texts"
		android:layout_marginLeft="107dp"
		android:layout_marginTop="572dp"
		android:layout_width="146dp"
		android:layout_height="31.8dp"
		android:text="Есть аккаунт?"
		android:fontFamily="@font/kav"
		android:layout_centerHorizontal="true"
		 />

	<TextView
		android:id="@+id/ent"
		android:layout_gravity="center_horizontal|center"
		android:gravity="center"
		android:textSize="18sp"
		android:textColor="@color/text_light"
		android:layout_marginLeft="139dp"
		android:layout_marginTop="598dp"
		android:layout_width="82dp"
		android:layout_height="32.8dp"
		android:text="Войдите"
		android:fontFamily="@font/kav"
		android:layout_centerHorizontal="true"
		/>

		<TextView
			android:id="@+id/login"
			android:layout_width="91.6dp"
			android:layout_height="24.6dp"
			android:layout_alignStart="@+id/rectangle_12"
			android:layout_marginStart="-26dp"
			android:layout_marginLeft="23dp"
			android:layout_marginTop="282dp"
			android:fontFamily="@font/kav"
			android:text="Login"
			android:textColor="@color/texts"
			android:textSize="16sp" />

		<TextView
			android:id="@+id/password"
			android:layout_width="78dp"
			android:layout_height="wrap_content"
			android:layout_alignStart="@+id/rectangle_13"
			android:layout_marginStart="-26dp"
			android:layout_marginLeft="23dp"
			android:layout_marginTop="371dp"
			android:fontFamily="@font/kav"
			android:text="Password"
			android:textColor="@color/texts"
			android:textSize="16sp" />

		<TextView
			android:id="@+id/email"
			android:layout_width="91.6dp"
			android:layout_height="24.6dp"
			android:layout_alignStart="@+id/rectangle_14"
			android:layout_marginStart="-26dp"
			android:layout_marginLeft="23dp"
			android:layout_marginTop="458dp"
			android:fontFamily="@font/kav"
			android:text="Email"
			android:textColor="@color/texts"
			android:textSize="16sp" />
	</RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
