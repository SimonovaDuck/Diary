
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<RelativeLayout
		android:id="@+id/content_container"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintBottom_toBottomOf="parent">

		<View
			android:id="@+id/_bg___registration"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@color/bled_purp" />


		<EditText
			android:id="@+id/rectangle_13"
			android:background="@color/mind"
			android:layout_width="246dp"
			android:layout_height="44dp"
			android:fontFamily="@font/kav"
			android:layout_marginStart="57dp"
			android:layout_marginTop="395dp"
			android:layout_centerHorizontal="true"
			android:imeOptions="actionNone"
			android:importantForAutofill="no"
			android:inputType="textPassword"


			/>

		<EditText
			android:id="@+id/rectangle_14"
			android:importantForAutofill="no"
			android:background="@color/mind"
			android:layout_width="246dp"
			android:layout_height="44dp"
			android:inputType="textEmailAddress"
			android:layout_marginStart="57dp"
			android:layout_marginTop="307dp"
			android:layout_centerHorizontal="true"
			android:imeOptions="actionNone"
			android:fontFamily="@font/kav"
			/>

		<TextView
			android:id="@+id/reg"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_marginLeft="103dp"
			android:layout_marginTop="229dp"
			android:text="Регистрация"
			android:fontFamily="@font/kav"
			android:textColor="@color/texts"
			android:textSize="24sp" />

		<TextView
			android:id="@+id/quest"
			android:gravity="center"
			android:textSize="18sp"
			android:textColor="@color/texts"
			android:layout_marginLeft="107dp"
			android:layout_below="@+id/registration_bt"
			android:layout_centerHorizontal="true"
			android:layout_gravity="center_horizontal|center"
			android:layout_marginTop="20dp"
			android:layout_width="146dp"
			android:layout_height="31.8dp"
			android:text="Есть аккаунт?"
			android:fontFamily="@font/kav"
			/>





		<TextView
			android:id="@+id/password"
			android:layout_width="78dp"
			android:layout_height="wrap_content"
			android:layout_alignStart="@+id/rectangle_13"
			android:layout_marginStart="26dp"
			android:layout_marginLeft="23dp"
			android:layout_marginTop="371dp"
			android:text="Password"
			android:fontFamily="@font/kav"
			android:textColor="@color/texts"
			android:textSize="16sp" />

		<TextView
			android:id="@+id/email"


			android:layout_width="91.6dp"
			android:layout_height="24.6dp"
			android:layout_alignStart="@+id/rectangle_14"
			android:layout_marginStart="26dp"
			android:layout_marginLeft="23dp"
			android:layout_marginTop="282dp"
			android:text="Email"
			android:fontFamily="@font/kav"
			android:textColor="@color/texts"
			android:textSize="16sp" />

		<TextView
			android:id="@+id/ent"
			android:layout_width="wrap_content"
			android:layout_height="48dp"
			android:layout_below="@+id/registration_bt"
			android:layout_centerHorizontal="true"
			android:layout_gravity="center_horizontal|center"
			android:layout_marginTop="45dp"
			android:background="@null"
			android:gravity="center"
			android:clickable="true"
			android:focusable="true"
			android:onClick="onClickEnt"
			android:text="Войдите"
			android:fontFamily="@font/kav"
			android:textColor="@color/text_light"
			android:textSize="18sp" />


		<Button
			android:id="@+id/registration_bt"
			android:layout_width="wrap_content"
			android:layout_height="48dp"
			android:layout_below="@+id/rectangle_13"
			android:layout_marginTop="40dp"
			android:layout_centerHorizontal="true"
			android:layout_gravity="center_horizontal|center"
			android:layout_marginLeft="139dp"
			android:background="@color/dark_pink"
			android:clickable="true"
			android:focusable="true"
			android:gravity="center"
			android:onClick="onClickregistration"
			android:text="Зарегестрироваться"
			android:fontFamily="@font/kav"
			android:textColor="@color/texts"
			android:textSize="18sp"
			android:textAllCaps="false" />
	</RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
